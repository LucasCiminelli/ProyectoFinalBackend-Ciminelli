<div class="max-w-md mx-auto bg-white rounded p-8 mt-10 shadow-lg">
  <h1 class="text-4xl font-extrabold mb-4 text-center text-indigo-600">Sign Up</h1>
  <form action="api/signup" method="post" class="space-y-4">
    <div class="mb-4">
      <label for="first_name" class="text-gray-600">First Name</label>
      <input
        type="text"
        id="first_name"
        name="first_name"
        placeholder="John"
        class="w-full p-3 rounded bg-gray-100 focus:outline-none focus:bg-white transition-all duration-300"
      />
    </div>
    <div class="mb-4">
      <label for="last_name" class="text-gray-600">Last Name</label>
      <input
        type="text"
        id="last_name"
        name="last_name"
        placeholder="Doe"
        class="w-full p-3 rounded bg-gray-100 focus:outline-none focus:bg-white transition-all duration-300"
      />
    </div>
    <div class="mb-4">
      <label for="email" class="text-gray-600">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="john.doe@example.com"
        class="w-full p-3 rounded bg-gray-100 focus:outline-none focus:bg-white transition-all duration-300"
      />
    </div>
    <div class="mb-4">
      <label for="age" class="text-gray-600">Age</label>
      <input
        type="number"
        id="age"
        name="age"
        placeholder="25"
        class="w-full p-3 rounded bg-gray-100 focus:outline-none focus:bg-white transition-all duration-300"
      />
    </div>
    <div class="mb-4">
      <label for="password" class="text-gray-600">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="********"
        class="w-full p-3 rounded bg-gray-100 focus:outline-none focus:bg-white transition-all duration-300"
      />
    </div>
    <button
      type="submit"
      class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded focus:outline-none focus:shadow-outline transition-all duration-300"
    >Register</button>
  </form>
</div>