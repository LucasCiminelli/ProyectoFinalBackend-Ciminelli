<div
  class="max-w-3xl mx-auto py-10"
  data-cart-id="{{cartId}}"
  data-user-role="{{rol}}"
>
  <h3 class="text-4xl font-extrabold mb-4 text-center text-indigo-600">
    Bienvenido
    {{first_name}}
    {{last_name}}
  </h3>
  <button
    class="w-full md:w-auto bg-red-500 hover:bg-red-700 text-white font-bold py-3 px-6 rounded focus:outline-none focus:shadow-outline"
  >
    <a href="/logout">Logout</a>
  </button>

  <h1 class="text-4xl mb-8 mt-10 text-center text-gray-800">PRODUCTOS</h1>

  <a
    href="/carts/{{cartId}}"
    class="text-4xl mb-4 block text-center cart-id"
  >ðŸ›’</a>

  <div class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {{#each products.payload}}
      <div class="p-6 bg-white rounded border product-container">
        <p class="font-bold text-2xl">{{this.title}}</p>
        <p class="text-gray-700">{{this.description}}</p>
        <p class="text-green-700">Precio: ${{this.price}}</p>
        <button
          class="mt-4 w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded focus:outline-none focus:shadow-outline addToCartButton"
          data-product-id="{{this._id}}"
          data-product-price="{{this.price}}"
          data-cart-id="{{cartId}}"
        >
          Agregar al carrito
        </button>
      </div>
    {{/each}}
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/products.js"></script>
</div>